# Test for disable_load_balance_on_write feature.
#

# Force load balance node to 1.
##backend_weight0 = 0
##backend_weight1 = 1

# Disable load balance in next transaction.
##disable_load_balance_on_write = 'trans_transaction'

# Create test table
'Q'	"DROP TABLE IF EXISTS pgproto_test1"
'Y'
