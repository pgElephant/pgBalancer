  <itemizedlist>
   <listitem>
    <!--
    2019-08-11 [fd53304]
    2019-08-11 [8653c40]
    -->
    <para>
     <!--
     Test: Fix test failure of extended-query-test when <varname>disable_load_balance_on_write = off/transaction/always</varname>. (Tatsuo Ishii)
     -->
